<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#DDDDDD" /> <!-- Background color of the bar -->
        </shape>
    </item>
    <item android:right="2dp" android:left="2dp" android:top="6dp">
        <shape android:shape="rectangle">
            <solid android:color="#C0C0C0" /> <!-- Shadow color -->
            <corners android:radius="1dp" />
        </shape>
    </item>
</layer-list>
